
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path 'images/added.jpeg' %>')">
<h2>Hola Hola Welcome to the bar</h2>
<p class="btn btn-warning"> <%= link_to "Add new cocktail?", new_cocktail_path %></p>
</div>

<div class="container">
  <div class="row">
    <% if @cocktails.present? %>
        <% @cocktails.each do |cocktail| %>
          <div class="col-12 col-md-6 col-lg-3">
            <div class="card_category" >
              <div class="card-description">
                <%= link_to cocktail.name, cocktail_path(cocktail) %>
                <%= cl_image_tag cocktail.photo, height: 180, width: 200, crop: :fill %>
              </div>
            </div>
          </div>
        <% end %>
    <% else %>
      <%= No cocktails yet click to add one %>
    <% end %>
    </div>
</div>





